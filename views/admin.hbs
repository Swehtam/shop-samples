<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title> Adm Page </title>
		{{> meta }}
	</head>
	<body>	
		<main class="content-wrapper">
				<section class="new_category">
					<h2>Create new category</h2>
					<form action="admin/category" method="post"/>
						<label>Name:</label>
						<input type="text" name="name" required/>
						<button type="submit" value="submit"> Create </button>
					</form>
				</section>

				<section class="new_product">
					<h2>Create new product</h2>

					<form action="admin/product" method="post" ectype="multipart/form-data">
						<label>Name:</label>
						<input type="text" name="name" required><br>
						
						<label>Price: $</label>
						<input type="number" name="price" min="0" step="0.05" required><br>
						
						<label>Description: </label><br>
						<textarea name="description" required></textarea><br>
						
						<label>Image:</label>
						<input type="file" name="img" required><br>
						
						<label>Category:</label>
						<select name="category">
								{{#each categories}}
								    <option value="{{this.catId}}">{{this.catName}}</option>
								{{/each}}
						</select>

						<button type="submit"> Create </button> 
					</form>
				</section>

				<section class="edit_content">
					<h2>Delete categories</h2>

					<table>
						<tr>
						    <th>Name</th>
						    <th></th>
						</tr>
						{{#each categories}}
						<form action="admin/category/{{this.catId}}" method="delete">
							<tr>
						    	<td>{{this.catName}}</td>
						    	<td><button type="submit">Delete</button></td>
							</tr>
						</form>
						{{/each}}
					</table>
				</section>

				<section class="edit_content">
					<h2>Delete products</h2>

					<table>
						<tr>
						    <th>Name</th>
						    <th>Price</th> 
						    <th>Description</th>
						    <th>Image</th>
						    <th>Category</th>
						    <th></th>
						</tr>
						{{#each products}}
						<form action="admin/product/{{this.catId}}" method="delete">
							<tr>
							    <td>{{this.prodName}}</td>
							    <td>$ {{this.price}}</td>
							    <td>{{this.description}}</td>
							    <th>{{this.img}}</th>
							    <th>{{this.catName}}</th> 
							    <td><button type="submit">Delete</button></td>
							</tr>
						</form>
						{{/each}}
					</table>
				</section>
		</main>
		
		<script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
		<script type="text/javascript" src="js/script.js"></script>
	</body>
</html>
